extends ../templates/page

block title
	title Canvas Test

block content
	#landing-demo.page-height
		canvas(id="canvas" width="1000" height="500")
	#learn-more
		nav.pushpin-nav.pinned(data-target="learn-more")
			.nav-wrapper.background-primary
				.container
					a.brand-logo(href="/") Here is a Thing

block scripts
	script(src="js/main.js")
	script.
		$('.pushpin-nav').each(function () {
			var $this = $(this);
			var $target = $('#' + $(this).attr('data-target'));
			$this.pushpin({
				top: $target.offset().top,
				bottom: $target.offset().top + $target.outerHeight() - $this.height()
			});
		});